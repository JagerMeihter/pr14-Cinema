<Page x:Class="pr14_Cinema.Views.MoviePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Информация о фильме">

    <Grid Background="#FFF5F5F5">
        <ScrollViewer>
            <StackPanel Margin="20">
                <!-- Кнопка назад -->
                <Button Content="← Назад к фильмам" 
                        Click="BackButton_Click"
                        Background="Transparent" 
                        Foreground="#666666"
                        BorderThickness="0"
                        HorizontalAlignment="Left"
                        Margin="0,0,0,20"
                        Padding="0" Cursor="Hand"/>

                <!-- Основная информация -->
                <Border Background="White" Padding="20" CornerRadius="10">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="300"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Постер -->
                        <Border Grid.Column="0" 
                                BorderBrush="#E0E0E0" BorderThickness="1"
                                Margin="0,0,20,0">
                            <Image x:Name="PosterImage" Stretch="Uniform" Height="450"/>
                        </Border>

                        <!-- Информация -->
                        <StackPanel Grid.Column="1">
                            <!-- Заголовок и рейтинг -->
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                                <TextBlock x:Name="TitleText" 
                                           FontSize="28" FontWeight="Bold"
                                           TextWrapping="Wrap"/>

                                <Border Background="#FF4CAF50" CornerRadius="5" 
                                        Padding="10,5" Margin="20,0,0,0"
                                        VerticalAlignment="Top">
                                    <TextBlock x:Name="RatingText" 
                                               Foreground="White" 
                                               FontSize="18" FontWeight="Bold"/>
                                </Border>
                            </StackPanel>

                            <!-- Основные детали -->
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                                <TextBlock x:Name="ReleaseDateText" Foreground="#666666"/>
                                <TextBlock Text=" • " Foreground="#666666"/>
                                <Border BorderBrush="#000000" BorderThickness="1" 
                                        Padding="5,2" CornerRadius="3">
                                    <TextBlock x:Name="AgeRatingText" FontWeight="SemiBold"/>
                                </Border>
                                <TextBlock Text=" • " Foreground="#666666"/>
                                <TextBlock x:Name="DurationText" Foreground="#666666"/>
                                <TextBlock Text=" • " Foreground="#666666"/>
                                <TextBlock x:Name="GenreText" Foreground="#666666"/>
                            </StackPanel>

                            <!-- Описание -->
                            <TextBlock Text="Описание:" FontSize="16" FontWeight="Bold" Margin="0,0,0,10"/>
                            <TextBlock x:Name="DescriptionText" 
                                       TextWrapping="Wrap" FontSize="14"
                                       Margin="0,0,0,30"/>

                            <!-- Блок с сеансами -->
                            <Border BorderBrush="#E0E0E0" BorderThickness="0,1,0,0" 
                                    Padding="0,20,0,0">
                                <StackPanel>
                                    <TextBlock Text="🎬 Ближайшие сеансы:" 
                                               FontSize="18" FontWeight="Bold"
                                               Margin="0,0,0,15"/>

                                    <ItemsControl x:Name="SessionsList">
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <Border BorderBrush="#E0E0E0" BorderThickness="0,0,0,1" 
                                                        Padding="15,10" Margin="0,0,0,5">
                                                    <Grid>
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="*"/>
                                                            <ColumnDefinition Width="Auto"/>
                                                        </Grid.ColumnDefinitions>

                                                        <StackPanel Grid.Column="0">
                                                            <TextBlock FontSize="16" FontWeight="Bold">
                                                                <Run Text="{Binding DateTime, StringFormat={}{0:dd.MM.yyyy HH:mm}}"/>
                                                                <Run Text=" • "/>
                                                                <Run Text="{Binding Hall.Name}"/>
                                                                <Run Text=" ("/>
                                                                <Run Text="{Binding Hall.Type}"/>
                                                                <Run Text=")"/>
                                                            </TextBlock>
                                                            <TextBlock>
                                                                <Run Text="Цена: "/>
                                                                <Run Text="{Binding TicketPrice, StringFormat={}{0}₽}" 
                                                                     Foreground="Green" FontWeight="Bold"/>
                                                            </TextBlock>
                                                        </StackPanel>

                                                        <Button Grid.Column="1" 
                                                                Content="Выбрать места" 
                                                                Click="SelectSession_Click"
                                                                Tag="{Binding Id}"
                                                                Background="#FF1A237E" 
                                                                Foreground="White"
                                                                Padding="15,5"
                                                                Cursor="Hand">
                                                            <Button.Style>
                                                                <Style TargetType="Button">
                                                                    <Setter Property="Cursor" Value="Hand"/>
                                                                    <Style.Triggers>
                                                                        <Trigger Property="IsMouseOver" Value="True">
                                                                            <Setter Property="Background" Value="#FF3949AB"/>
                                                                        </Trigger>
                                                                    </Style.Triggers>
                                                                </Style>
                                                            </Button.Style>
                                                        </Button>
                                                    </Grid>
                                                </Border>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>

                                    <!-- Сообщение если нет сеансов -->
                                    <TextBlock x:Name="NoSessionsText" 
                                               Text="На данный момент нет доступных сеансов"
                                               Foreground="#666666" FontStyle="Italic"
                                               HorizontalAlignment="Center" Margin="20"
                                               Visibility="Collapsed"/>
                                </StackPanel>
                            </Border>
                        </StackPanel>
                    </Grid>
                </Border>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>