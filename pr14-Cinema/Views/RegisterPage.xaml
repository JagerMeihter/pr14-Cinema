<Page x:Class="pr14_Cinema.Views.RegisterPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Регистрация">

    <Grid Background="#FFF5F5F5">
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <Border Width="450" VerticalAlignment="Center" HorizontalAlignment="Center"
                    Background="White" Padding="30" CornerRadius="10" Margin="20">
                <Border.Effect>
                    <DropShadowEffect ShadowDepth="5" Opacity="0.2"/>
                </Border.Effect>

                <StackPanel>
                    <!-- Заголовок -->
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
                        <TextBlock Text="📝" FontSize="28" Margin="0,0,10,0"/>
                        <TextBlock Text="Регистрация" FontSize="24" FontWeight="Bold"/>
                    </StackPanel>

                    <!-- ФИО -->
                    <TextBlock Text="ФИО:" FontSize="14" Margin="0,0,0,5"/>
                    <TextBox x:Name="FullNameTextBox" 
                             FontSize="14" Padding="10"
                             BorderBrush="#E0E0E0" BorderThickness="1"
                             Margin="0,0,0,15"/>

                    <!-- Email -->
                    <TextBlock Text="Email:" FontSize="14" Margin="0,0,0,5"/>
                    <TextBox x:Name="EmailTextBox" 
                             FontSize="14" Padding="10"
                             BorderBrush="#E0E0E0" BorderThickness="1"
                             Margin="0,0,0,15"/>

                    <!-- Телефон -->
                    <TextBlock Text="Телефон:" FontSize="14" Margin="0,0,0,5"/>
                    <TextBox x:Name="PhoneTextBox" 
                             FontSize="14" Padding="10"
                             BorderBrush="#E0E0E0" BorderThickness="1"
                             Margin="0,0,0,15"/>

                    <!-- Имя пользователя -->
                    <TextBlock Text="Имя пользователя:" FontSize="14" Margin="0,0,0,5"/>
                    <TextBox x:Name="UsernameTextBox" 
                             FontSize="14" Padding="10"
                             BorderBrush="#E0E0E0" BorderThickness="1"
                             Margin="0,0,0,15"/>

                    <!-- Пароль -->
                    <TextBlock Text="Пароль:" FontSize="14" Margin="0,0,0,5"/>
                    <PasswordBox x:Name="PasswordBox" 
                                 FontSize="14" Padding="10"
                                 BorderBrush="#E0E0E0" BorderThickness="1"
                                 Margin="0,0,0,15"/>

                    <!-- Подтверждение пароля -->
                    <TextBlock Text="Подтвердите пароль:" FontSize="14" Margin="0,0,0,5"/>
                    <PasswordBox x:Name="ConfirmPasswordBox" 
                                 FontSize="14" Padding="10"
                                 BorderBrush="#E0E0E0" BorderThickness="1"
                                 Margin="0,0,0,25"/>

                    <!-- Кнопка регистрации -->
                    <Button Content="Зарегистрироваться" Click="RegisterButton_Click"
                            Background="#FF4CAF50" Foreground="White"
                            FontSize="16" FontWeight="Bold"
                            Padding="15,10" Margin="0,0,0,15"
                            Cursor="Hand">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Cursor" Value="Hand"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#45a049"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>

                    <!-- Ссылка на вход -->
                    <TextBlock HorizontalAlignment="Center">
                        <Run Text="Уже есть аккаунт?"/>
                        <Hyperlink Click="LoginLink_Click" TextDecorations="None">
                            <Run Text="Войдите" Foreground="#FF1A237E" FontWeight="Bold"/>
                        </Hyperlink>
                    </TextBlock>

                    <!-- Кнопка назад -->
                    <Button Content="← На главную" Click="BackButton_Click"
                            Background="Transparent" Foreground="#666666"
                            BorderThickness="0" Margin="0,20,0,0"
                            HorizontalAlignment="Left"/>
                </StackPanel>
            </Border>
        </ScrollViewer>
    </Grid>
</Page>