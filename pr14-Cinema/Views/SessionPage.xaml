<Page x:Class="pr14_Cinema.Views.SessionPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Выбор мест">

    <Grid Background="#FFF5F5F5">
        <ScrollViewer>
            <StackPanel Margin="20">
                <!-- Кнопка назад -->
                <Button Content="← Назад к сеансам" 
                        Click="BackButton_Click"
                        Background="Transparent" 
                        Foreground="#666666"
                        BorderThickness="0"
                        HorizontalAlignment="Left"
                        Margin="0,0,0,20"
                        Padding="0" Cursor="Hand"/>

                <!-- Информация о сеансе -->
                <Border Background="White" Padding="20" CornerRadius="10" Margin="0,0,0,20">
                    <StackPanel>
                        <TextBlock x:Name="SessionInfoText" 
                                   FontSize="20" FontWeight="Bold"
                                   Margin="0,0,0,10"/>
                        <TextBlock x:Name="PriceText" FontSize="16"/>
                    </StackPanel>
                </Border>

                <!-- Схема зала -->
                <Border Background="White" Padding="20" CornerRadius="10">
                    <StackPanel>
                        <TextBlock Text="🎯 Выберите места:" 
                                   FontSize="18" FontWeight="Bold"
                                   Margin="0,0,0,20"/>

                        <!-- Экран -->
                        <Border BorderBrush="#666666" BorderThickness="0,0,0,3" 
                                Margin="50,0,50,30" Padding="0,0,0,10">
                            <TextBlock Text="ЭКРАН" 
                                       HorizontalAlignment="Center"
                                       FontSize="16" FontWeight="Bold"
                                       Foreground="#666666"/>
                        </Border>

                        <!-- Зал с местами -->
                        <ItemsControl x:Name="SeatsGrid">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <WrapPanel Orientation="Horizontal" 
                                               HorizontalAlignment="Center"/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Width="40" Height="40" Margin="5"
                                            BorderBrush="#CCCCCC" BorderThickness="1"
                                            CornerRadius="3" Cursor="Hand"
                                            MouseEnter="Seat_MouseEnter"
                                            MouseLeave="Seat_MouseLeave">

                                        <Border.Style>
                                            <Style TargetType="Border">
                                                <Setter Property="Background" Value="#F5F5F5"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding IsBooked}" Value="True">
                                                        <Setter Property="Background" Value="#FFE0E0E0"/>
                                                        <Setter Property="Cursor" Value="No"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding IsSelected}" Value="True">
                                                        <Setter Property="Background" Value="#4CAF50"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding Type}" Value="VIP">
                                                        <Setter Property="Background" Value="#FFD700"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding Type}" Value="Disabled">
                                                        <Setter Property="Background" Value="#666666"/>
                                                        <Setter Property="Cursor" Value="No"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Border.Style>
                                        
                                        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                                            <TextBlock Text="{Binding Row}" 
                                                       HorizontalAlignment="Center"
                                                       FontSize="10" FontWeight="Bold"/>
                                            <TextBlock Text="{Binding Number}" 
                                                       HorizontalAlignment="Center"
                                                       FontSize="12" FontWeight="Bold"/>
                                        </StackPanel>
                                        <Border.InputBindings>
                                            <MouseBinding MouseAction="LeftClick" 
                                            Command="{Binding SelectCommand, Mode=OneTime}"/>
                                        </Border.InputBindings>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>

                        <!-- Легенда -->
                        <Border BorderBrush="#E0E0E0" BorderThickness="0,1,0,0" 
                                Margin="0,30,0,0" Padding="0,20,0,0">
                            <WrapPanel HorizontalAlignment="Center" Margin="10">
                                <StackPanel Orientation="Horizontal" Margin="10">
                                    <Border Width="20" Height="20" Background="#F5F5F5" 
                                            BorderBrush="#CCCCCC" BorderThickness="1"/>
                                    <TextBlock Text="Свободно" Margin="10,0,0,0" VerticalAlignment="Center"/>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="10">
                                    <Border Width="20" Height="20" Background="#FFE0E0E0"/>
                                    <TextBlock Text="Занято" Margin="10,0,0,0" VerticalAlignment="Center"/>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="10">
                                    <Border Width="20" Height="20" Background="#4CAF50"/>
                                    <TextBlock Text="Выбрано" Margin="10,0,0,0" VerticalAlignment="Center"/>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="10">
                                    <Border Width="20" Height="20" Background="#FFD700"/>
                                    <TextBlock Text="VIP" Margin="10,0,0,0" VerticalAlignment="Center"/>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="10">
                                    <Border Width="20" Height="20" Background="#666666"/>
                                    <TextBlock Text="Недоступно" Margin="10,0,0,0" VerticalAlignment="Center"/>
                                </StackPanel>
                            </WrapPanel>
                        </Border>

                        <!-- Выбранные места -->
                        <Border Background="#E8F5E8" Padding="15" Margin="0,20,0,0" 
                                CornerRadius="5" BorderBrush="#4CAF50" BorderThickness="1">
                            <StackPanel>
                                <TextBlock Text="Выбранные места:" FontWeight="Bold" Margin="0,0,0,10"/>
                                <ItemsControl x:Name="SelectedSeatsList">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <TextBlock>
                                                <Run Text="Ряд "/>
                                                <Run Text="{Binding Row}"/>
                                                <Run Text=", Место "/>
                                                <Run Text="{Binding Number}"/>
                                                <Run Text=" - "/>
                                                <Run Text="{Binding Type}"/>
                                            </TextBlock>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>

                                <TextBlock x:Name="TotalPriceText" FontSize="16" FontWeight="Bold" 
                                           Margin="0,10,0,0" Foreground="Green"/>
                            </StackPanel>
                        </Border>

                        <!-- Кнопки -->
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,30,0,0">
                            <Button Content="Очистить выбор" Click="ClearSelection_Click"
                                    Background="#FFE0E0E0" Foreground="#333333"
                                    Padding="15,10" Margin="0,0,20,0" Cursor="Hand"/>

                            <Button Content="Продолжить оформление" Click="ContinueBooking_Click"
                                    Background="#FF1A237E" Foreground="White"
                                    Padding="20,10" FontSize="16" FontWeight="Bold"
                                    Cursor="Hand">
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Cursor" Value="Hand"/>
                                        <Setter Property="IsEnabled" Value="False"/>
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#FF3949AB"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                            </Button>
                        </StackPanel>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>  
                       