<Page x:Class="pr14_Cinema.Views.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Главная страница">

    <Grid Background="#FFF5F5F5">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Поиск и фильтры -->
        <Border Grid.Row="0" Background="White" Padding="20" Margin="0,0,0,10">
            <StackPanel>
                <!-- Строка поиска -->
                <TextBlock Text="Поиск фильма:" FontSize="16" Margin="0,0,0,10"/>
                <TextBox x:Name="SearchTextBox" 
                         TextChanged="SearchTextBox_TextChanged"
                         Padding="10" FontSize="14"
                         BorderBrush="#E0E0E0" BorderThickness="1"/>

                <!-- Фильтры и сортировка -->
                <StackPanel Orientation="Horizontal" Margin="0,20,0,0">
                    <TextBlock Text="Сортировка:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                    <ComboBox x:Name="SortComboBox" Width="150" SelectionChanged="SortComboBox_SelectionChanged">
                        <ComboBoxItem Content="По названию (А-Я)"/>
                        <ComboBoxItem Content="По названию (Я-А)"/>
                        <ComboBoxItem Content="По рейтингу (высокий)"/>
                        <ComboBoxItem Content="По рейтингу (низкий)"/>
                        <ComboBoxItem Content="По дате (новые)"/>
                        <ComboBoxItem Content="По дате (старые)"/>
                    </ComboBox>

                    <TextBlock Text="Возрастной рейтинг:" VerticalAlignment="Center" Margin="30,0,10,0"/>
                    <ComboBox x:Name="AgeRatingComboBox" Width="100" SelectionChanged="AgeRatingComboBox_SelectionChanged">
                        <ComboBoxItem Content="Все"/>
                        <ComboBoxItem Content="0+"/>
                        <ComboBoxItem Content="6+"/>
                        <ComboBoxItem Content="12+"/>
                        <ComboBoxItem Content="16+"/>
                        <ComboBoxItem Content="18+"/>
                    </ComboBox>

                    <TextBlock Text="Жанр:" VerticalAlignment="Center" Margin="30,0,10,0"/>
                    <ComboBox x:Name="GenreComboBox" Width="150" SelectionChanged="GenreComboBox_SelectionChanged"/>
                </StackPanel>
            </StackPanel>
        </Border>

        <!-- Заголовок -->
        <TextBlock Grid.Row="1" Text="Сейчас в кино" 
                   FontSize="24" FontWeight="Bold" 
                   Margin="20,10" HorizontalAlignment="Center"/>

        <!-- Сетка фильмов -->
        <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto">
            <ItemsControl x:Name="MoviesList">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel Orientation="Horizontal" HorizontalAlignment="Center"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>

                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border BorderBrush="#E0E0E0" BorderThickness="1" 
                                Margin="15" Padding="10" Width="280"
                                Background="White" CornerRadius="5"
                                MouseEnter="MovieItem_MouseEnter"
                                MouseLeave="MovieItem_MouseLeave">
                            <Border.Effect>
                                <DropShadowEffect ShadowDepth="2" Opacity="0.2"/>
                            </Border.Effect>

                            <StackPanel>
                                <!-- Постер -->
                                <Border BorderBrush="#E0E0E0" BorderThickness="1" Height="350">
                                    <Image Source="{Binding PosterUrl}" Stretch="UniformToFill"/>
                                </Border>

                                <!-- Информация о фильме -->
                                <StackPanel Margin="0,10,0,0">
                                    <!-- Название и рейтинг -->
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="{Binding Title}" 
                                                   FontWeight="Bold" FontSize="16"
                                                   TextWrapping="Wrap" Width="180"/>

                                        <!-- Рейтинг -->
                                        <Border Background="#FF4CAF50" CornerRadius="3" 
                                                Padding="5,2" Margin="10,0,0,0">
                                            <TextBlock Text="{Binding Rating, StringFormat={}{0:F1}}" 
                                                       Foreground="White" FontWeight="Bold"/>
                                        </Border>
                                    </StackPanel>

                                    <!-- Дата и возрастной рейтинг -->
                                    <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                                        <TextBlock Text="{Binding ReleaseDate, StringFormat={}{0:dd.MM.yyyy}}" 
                                                   Foreground="#666666"/>
                                        <TextBlock Text=" • " Foreground="#666666"/>
                                        <Border BorderBrush="#FF000000" BorderThickness="1" 
                                                Padding="3,1" CornerRadius="2">
                                            <TextBlock Text="{Binding AgeRating}" 
                                                       FontWeight="SemiBold"/>
                                        </Border>
                                        <TextBlock Text=" • " Foreground="#666666"/>
                                        <TextBlock Text="{Binding Duration, StringFormat={}{0} мин}" 
                                                   Foreground="#666666"/>
                                    </StackPanel>

                                    <!-- Жанры -->
                                    <TextBlock Text="{Binding Genre}" 
                                               Foreground="#666666" Margin="0,5,0,0"
                                               TextWrapping="Wrap" FontSize="12"/>
                                </StackPanel>

                                <!-- Кнопка "Подробнее" -->
                                <Button Content="Подробнее и сеансы" 
                                        Click="ViewMovieDetails_Click"
                                        Tag="{Binding Id}"
                                        Background="#FF1A237E" 
                                        Foreground="White"
                                        Margin="0,10,0,0"
                                        Padding="10,5"
                                        Cursor="Hand">
                                    <Button.Style>
                                        <Style TargetType="Button">
                                            <Setter Property="Cursor" Value="Hand"/>
                                            <Style.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Background" Value="#FF3949AB"/>
                                                </Trigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Button.Style>
                                </Button>
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
    </Grid>
</Page>