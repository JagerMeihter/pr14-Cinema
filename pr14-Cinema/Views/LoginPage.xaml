<Page x:Class="pr14_Cinema.Views.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Вход в систему">

    <Grid Background="#FFF5F5F5">
        <Border Width="400" VerticalAlignment="Center" HorizontalAlignment="Center"
                Background="White" Padding="30" CornerRadius="10">
            <Border.Effect>
                <DropShadowEffect ShadowDepth="5" Opacity="0.2"/>
            </Border.Effect>

            <StackPanel>
                <!-- Заголовок -->
                <StackPanel Orientation="Horizontal" Margin="0,0,0,30">
                    <TextBlock Text="🔐" FontSize="28" Margin="0,0,10,0"/>
                    <TextBlock Text="Вход в аккаунт" FontSize="24" FontWeight="Bold"/>
                </StackPanel>

                <!-- Поле логина -->
                <TextBlock Text="Имя пользователя:" FontSize="14" Margin="0,0,0,5"/>
                <TextBox x:Name="UsernameTextBox" 
                         FontSize="14" Padding="10"
                         BorderBrush="#E0E0E0" BorderThickness="1"
                         Margin="0,0,0,15"/>

                <!-- Поле пароля -->
                <TextBlock Text="Пароль:" FontSize="14" Margin="0,0,0,5"/>
                <PasswordBox x:Name="PasswordBox" 
                             FontSize="14" Padding="10"
                             BorderBrush="#E0E0E0" BorderThickness="1"
                             Margin="0,0,0,25"/>

                <!-- Кнопка входа -->
                <Button Content="Войти" Click="LoginButton_Click"
                        Background="#FF1A237E" Foreground="White"
                        FontSize="16" FontWeight="Bold"
                        Padding="15,10" Margin="0,0,0,15"
                        Cursor="Hand">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Cursor" Value="Hand"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#FF3949AB"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>

                <!-- Ссылка на регистрацию -->
                <TextBlock HorizontalAlignment="Center">
                    <Run Text="Нет аккаунта?"/>
                    <Hyperlink Click="RegisterLink_Click" TextDecorations="None">
                        <Run Text="Зарегистрируйтесь" Foreground="#FF1A237E" FontWeight="Bold"/>
                    </Hyperlink>
                </TextBlock>

                <!-- Кнопка назад -->
                <Button Content="← На главную" Click="BackButton_Click"
                        Background="Transparent" Foreground="#666666"
                        BorderThickness="0" Margin="0,20,0,0"
                        HorizontalAlignment="Left"/>
            </StackPanel>
        </Border>
    </Grid>
</Page>