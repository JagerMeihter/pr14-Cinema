<Window x:Class="pr14_Cinema.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Кинотеатр" Height="700" Width="1200"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Шапка с навигацией -->
        <Border Grid.Row="0" Background="#FF1A237E" Padding="10">
            <StackPanel Orientation="Horizontal">
                <!-- Логотип и название -->
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="🎬" FontSize="24" VerticalAlignment="Center" Margin="0,0,10,0"/>
                    <TextBlock Text="CINEMA CITY" FontSize="20" FontWeight="Bold" 
                               Foreground="White" VerticalAlignment="Center"/>
                </StackPanel>

                <!-- Кнопки навигации -->
                <StackPanel Orientation="Horizontal" Margin="50,0,0,0">
                    <Button x:Name="HomeBtn" Content="🏠 Главная" 
                            Click="HomeBtn_Click" 
                            Background="Transparent" 
                            Foreground="White"
                            BorderThickness="0"/>

                    <Button x:Name="ProfileBtn" Content="👤 Профиль" 
                            Click="ProfileBtn_Click"
                            Background="Transparent" 
                            Foreground="White"
                            BorderThickness="0"
                            Margin="20,0,0,0"/>
                </StackPanel>

                <!-- Информация о пользователе -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <TextBlock x:Name="UserInfoText" Text="Гость" 
                               Foreground="White" VerticalAlignment="Center"
                               Margin="0,0,20,0"/>

                    <Button x:Name="LoginBtn" Content="Войти" 
                            Click="LoginBtn_Click"
                            Background="#FF3949AB" 
                            Foreground="White"/>

                    <Button x:Name="RegisterBtn" Content="Регистрация" 
                            Click="RegisterBtn_Click"
                            Background="#FF5C6BC0" 
                            Foreground="White"
                            Margin="10,0,0,0"/>
                </StackPanel>
            </StackPanel>
        </Border>

        <!-- Основной контент -->
        <Frame x:Name="MainFrame" Grid.Row="1" NavigationUIVisibility="Hidden"/>
    </Grid>
</Window>